@model LuizaLabs.App.ValuesObjects.Usuario
@{
    ViewData["Title"] = "Acessar";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Logar">
            <p>Entre com o endere√ßo de e-mail e senha. </p>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Senha"></label>
                <input asp-for="@Model.Senha" type="password" class="form-control">
                <span asp-validation-for="@Model.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#">Esqueceu a senha ?</a>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@await Html.PartialAsync("_ValidationScriptsPartial")
<script>
    $(document).ready(function () {
        if ('@ViewBag.Mensagem' != '')
            $.alert('@ViewBag.Mensagem', "Sucesso");
    });
</script>
}